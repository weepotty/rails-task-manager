<%= form_with model: task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_area :details %>
  <% if task.new_record? %>
    <%= f.submit "Create" %>
  <% else %>
    <%= f.check_box :completed%>
    <%= f.label :completed, "Completed?"%>
  <%= f.submit "Update" %>
  <% end %>
<% end %>

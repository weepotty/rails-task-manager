<h1>My tasks</h1>


<ol>
<% @tasks.each do |task| %>
  <li> <% if task.completed %>
  <i class="fa-regular fa-square-check"></i>
  <% else %>
  <i class="fa-regular fa-square"></i>
  <% end %>

  <%= link_to task.title, task_path(task) %><span><%= link_to task_path(task), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
  <i class="fa-solid fa-trash-can"></i>
  <%end%></span></li>


<% end %>
</ol>

<i class="fa-solid fa-plus"></i> <%= link_to 'Add task', new_task_path %>
